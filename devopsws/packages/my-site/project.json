{
  "name": "my-site",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/my-site/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/packages/my-site"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nrwl/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "my-site:build",
        "proxyConfig": "packages/my-site/proxy.conf.json"
      },
      "configurations": {
        "development": {
          "buildTarget": "my-site:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "my-site:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nrwl/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "my-site:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "my-site:build:development"
        },
        "production": {
          "buildTarget": "my-site:build:production"
        }
      }
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": ["coverage/packages/my-site"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/my-site"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/my-site/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "serve-static": {
      "executor": "@nrwl/web:file-server",
      "options": {
        "buildTarget": "my-site:build"
      }
    }
  },
  "tags": []
}
